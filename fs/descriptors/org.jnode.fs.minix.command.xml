<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.fs.minix.command"
        name="Minix specific commands"
        version="@VERSION@"
        provider-name="JNode.org"
        license-name="lgpl">

    <requires>
        <import plugin="org.jnode.fs.minix"/>
        <import plugin="org.jnode.fs.command"/>
        <import plugin="org.jnode.shell.help"/>
    </requires>

    <runtime>
        <library name="jnode-fs.jar">
            <export name="org.jnode.fs.minix.command.*"/>
        </library>
    </runtime>

    <extension point="org.jnode.shell.aliases">
        <alias name="formatMinix" class="org.jnode.fs.minix.command.FormatMinixCommand"/>
    </extension>

    <extension point="org.jnode.shell.syntaxes">
        <syntax alias="formatMinix">
            <sequence description="format a Minix v2 file system">
                <argument argLabel="device"/>
            </sequence>
        </syntax>
    </extension>
</plugin>
